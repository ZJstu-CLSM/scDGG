        community = [gene for gene in community if not pd.isnull(gene)]
        
        # 计算模块内基因的加权平均权重
        gene_weights = {gene: sum(net[gene][neighbor]['weight'] for neighbor in net.neighbors(gene)) for gene in community}
        
